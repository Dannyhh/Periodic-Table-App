<?xml version="1.0" encoding="utf-8"?>

<!--Creates the periodic table screen-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_periodic_table_screen"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    tools:context="ros_dhhiggins.example.com.periodictable.PeriodicTableScreen">

    <!--Creates horizontal scroll view-->
    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbars="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <!--Creates the TableLayout for all the buttons-->
        <TableLayout
            android:id="@+id/LayoutTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="18"
            android:rowCount="7"
            android:stretchColumns="*">


        </TableLayout>


    </HorizontalScrollView>

</ScrollView>